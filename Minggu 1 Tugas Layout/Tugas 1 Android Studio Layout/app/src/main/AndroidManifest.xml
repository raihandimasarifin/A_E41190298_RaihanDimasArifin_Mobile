<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.layout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Layout">
        <activity android:name=".ScrollViewHorizontalActivity"></activity>
        <activity android:name=".ScrollViewActivity" />
        <activity android:name=".TabelActivity" />
        <activity android:name=".FrameActivity" />
        <activity android:name=".RelativeActivity" />
        <activity android:name=".ConstraintActivity" />
        <activity android:name=".MaterialDesignActivity" />
        <activity android:name=".LinearActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>